<Window x:Class="PasswordKeeper.Core.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordKeeper.Core"
        mc:Ignorable="d"
        Title="About" Height="220" Width="400" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <Grid Background="DimGray" UseLayoutRounding="True">
        <Border Background="White" CornerRadius="10" Margin="16" Padding="12">
            <StackPanel Margin="8,0">
                <TextBlock Text="Password keeper" HorizontalAlignment="Center" 
                           FontSize="24" Margin="0,0,0,12"/>
                
                <Line X1="0" Y1="0" X2="{Binding RelativeSource={RelativeSource AncestorType=StackPanel}, Path=ActualWidth}"
                      Y2="0" Margin="0,0,0,16" Stroke="DimGray" StrokeThickness="6" HorizontalAlignment="Center"/>
                
                <StackPanel>
                    <TextBlock Text="RinRon Corporation, 2021." Margin="0,0,0,4"/>
                    <TextBlock Text="Version: 1.2.0" Margin="0,0,0,4"/>
                    <TextBlock Text="All rights reserved."/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
